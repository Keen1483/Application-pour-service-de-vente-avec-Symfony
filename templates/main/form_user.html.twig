{% extends "base.html.twig" %}

{% block body %}

    <div class="row" id="formUser">
        <div class="col-sm-8 offset-sm-2">
            <div class="border-bottom mb-4 mt-4 pb-2">
                <div class="alert alert-info" role="alert">
                    <h4>Inscrivez vous en 30 secondes</h4>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h6 class="card-text text-center">Informations personnelles</h3>
                </div>
                <div class="card-body">

                    {{ form_start(form_user) }}
                        {{ form_row(form_user.email, {'label': 'Email', 'attr': {'placeholder': 'votre adresse email'}}) }}
                        {{ form_row(form_user.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'votre mot de passe'}}) }}
                        <div class="form-group">
                            <label for="password_confirm">Confirmez le mot de passe</label>
                            <input type="password" name="password_confirm" id="password_confirm" class="form-control" placeholder="confirmez votre mot de passe">
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-4">
                                <button id="submit" class="btn btn-primary" name="signup" value="Sign up">Sign up</button>
                            </div>
                        </div>
                    {{ form_end(form_user) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
