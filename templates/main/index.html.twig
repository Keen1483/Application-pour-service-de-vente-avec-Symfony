{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <h1>Mome page !</h1>
    <p>
        {% for user in users %}
            <p>{{ user.email }}</p>
        {% endfor %}
    </p>
    <button><a href="{{ path('redirect') }}">Connexion</a></button>
    {% if app.user %}
        {% for role in app.user.roles %}
        {% endfor %}
        {% if "ROLE_ADMIN" in app.user.roles %}
            <button><a href="{{ path('admin_page') }}">Connexion Admin</a></button>
        {% endif %}
    {% endif %}
{% endblock %}
