{% extends "base.html.twig" %}

{% block body %}

    <div class="row" id="formUser">
        <div class="col-sm-8 offset-sm-2">
            <div class="border-bottom mb-4 mt-4 pb-2">
                <div class="alert alert-info" role="alert">
                    <h4>Inscrivez vous en 30 secondes</h4>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-text text-center text-dark">Vos informations</h4>
                </div>
                <div class="card-body">

                    {{ form_start(form_user) }}
                        {{ form_row(form_user.username, {'label': "Nom d'utilisateur", 'attr': {'placeholder': "Nom d'utilisateur"}}) }}
                        {{ form_row(form_user.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Adresse email'}}) }}
                        {{ form_row(form_user.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe !'}}) }}
                        {{ form_row(form_user.password_confirm, {'label': 'Répéter le mot de passe', 'attr': {'placeholder': 'Répéter le mot de passe !'}}) }}

                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-4">
                                <button id="submit" class="btn btn-primary" name="signup" value="Sign up">Inscription !</button>
                            </div>
                        </div>
                    {{ form_end(form_user) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
