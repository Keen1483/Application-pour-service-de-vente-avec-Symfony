{% extends "base.html.twig" %}

{% block body %}
    <h1>Liste des AEP</h1>
    <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Type</th>
            <th scope="col">Source</th>
            <th scope="col">Année de construction</th>
            <th scope="col">Capacité de production</th>
            <th scope="col">Remplir par</th>
            <th scope="col">Lien de consultation</th>
          </tr>
        </thead>
        <tbody>

          {% set i = 1 %}
            {% for aep in liste_aep %}
              <tr>
                  <th scope="row">{{ i }}</th>
                  <td>{{ aep.aep.type }}</td>
                  <td>{{ aep.aep.source }}</td>
                  <td>{{ aep.aep.buildingYear|date("d/m/Y") }}</td>
                  <td>{{ aep.aep.productionCapacity }}</td>
                  <td>{{ aep.user.name }}</td>
                  <td><a href="{{ path('aep_show', {'id': aep.aep.id}) }}" class="btn btn-primary">Lire la suite</a></td>
                  {% set i = i +1 %}
              </tr>
            {% endfor %}
        </tbody>
      </table>
{% endblock %}