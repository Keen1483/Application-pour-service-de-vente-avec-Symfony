{% extends "base.html.twig" %}

{% block body %}

    <article>
        <h2>{{ product.name }}</h2>
        <div class="metadata">Catégorie : <strong>{{ product.category.name }}</strong></div>
        <div class="content">
            <div class="w-100">
                <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="" class="img-fluid my-1 border rounded">
            </div>
            <p>{{ product.description }}</p>
        </div>
    </article>

    <section id="commentaires">
        <h2>{{ product.comments|length }} Commentaires :</h2>
        {% for comment in product.comments %}
            <div class="comment">
                <div class="row">
                    <div class="col-3">
                        {{ comment.author }} <small>{{ comment.createdAt|date("d/m/Y à H:i") }}</small>
                    </div>
                    <div class="col">
                        {{ comment.content|raw }}
                    </div>
                </div>
            </div>
        {% endfor %}

        {% if app.user %}
            {{ form_start(comment) }}
                {{ form_row(comment.author, {'label': 'Auteur', 'attr': {'placeholder': 'Votre nom'}}) }}
                {{ form_row(comment.content, {'label': 'Contenu', 'attr': {'placeholder': 'Votre commentaire'}}) }}

                <button type="submit" class="btn btn-success">Commenter !</button>
            {{ form_end(comment) }}
        {% else %}
            <h2>Vous ne pouvez pas commenter si vous n'êtes pas connecté !</h2>
            <a href="{{ path('login') }}" class="btn btn-success">Connexion</a>
        {% endif %}
    </section>
    
{% endblock %}